<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings>
    <embeddable class="sv.com.eshop.core.entities.Buyer$BuyerIdentifier">
        <attributes>
            <basic name="id">
                <column name="buyer_id" column-definition="UUID"/>
            </basic>
        </attributes>
    </embeddable>
    <embeddable class="sv.com.eshop.core.entities.PaymentMethod">
        <attributes>
            <basic name="alias">
                <column name="alias"/>
            </basic>
            <basic name="cardId">
                <column name="card_id"/>
            </basic>
            <basic name="last4">
                <column name="last4"/>
            </basic>
        </attributes>
    </embeddable>
    <entity class="sv.com.eshop.core.entities.Buyer" access="FIELD">
        <table name="Buyers"/>
        <attributes>
            <embedded-id name="id"/>
            <basic name="identityGuid">
                <column name="identity_guid" nullable="false"/>
            </basic>
            <element-collection name="paymentMethods">
                <collection-table name="PaymentMethods">
                    <join-column name="buyer_id"/>
                </collection-table>
            </element-collection>
        </attributes>
    </entity>
</entity-mappings>